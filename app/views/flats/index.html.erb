<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Nos appartements</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @query %>
        <p>Vous avez cherché <strong><%= @query %></strong>. Nous avons trouvé <%= @flats.count %> appartements <%= Flat.count %> sur notre site.</p>
      <% else %>
        <p><%= Flat.count %> appartements.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card shadow-lg m-2 p-2">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <span><%= flat.number_of_guests %></span><i class="material-icons me-2"> personnes</i>
              </div>
              <div class="flex ms-3">
                <%= flat.price_per_night %><i class="material-icons me-2"> €</i>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to "Plus d'infos", flat_path(flat), class: 'btn btn-primary' %>
            <%= link_to "Modifier", edit_flat_path(flat), class: 'btn btn-success' %>
            <%= link_to "Supprimer", flat_path(flat),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
